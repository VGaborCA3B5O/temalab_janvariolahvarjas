@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h1>@ViewData["Title"]</h1>
<hr />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <img />
                @if (Model.LoggedInUser.ProfilePicture != null)
                {
                    <img class="card-img" src="~/Images/ProfilePictures/@Model.LoggedInUser.ProfilePicture" alt="Avatar">
                }
                else
                {
                    <img class="card-img" src="~/Images/ProfilePictures/default.jpg" alt="Avatar">
                }
                <input asp-for="Image" class="form-control-file" type="file" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Introduction"></label>
                <input asp-for="Input.Introduction" class="form-control" />
                <span asp-validation-for="Input.Introduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a id="password-change" class="text-secondary" asp-page="./ChangePassword">Change Password</a>
            </div>
            <div class="form-group">
                <a id="forgot-password" class="text-secondary" asp-area="Identity" asp-page="/Account/ResetPassword">Reset Password</a>
            </div>
            <div class="form-group">
                <a id="email-change" class="text-secondary" asp-page="./Email">Change Email</a>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-dark">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}