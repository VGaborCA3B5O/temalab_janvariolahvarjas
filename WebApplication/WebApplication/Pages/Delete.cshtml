@page
@model WebApplication.Pages.Post.DeleteModel

    <div class="card text-white bg-dark mx-auto" style="width: 32rem;">
        <h4 class="card-header text-danger mt-1 mb-1">Are you sure you want to delete this post?</h4>
        <img class="card-img-top" src="~/Images/Uploads/@Model.Post.ImageName" alt="Card image cap">
        <div class="card-body">
            <form method="post">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="text-danger" asp-page="Details" asp-route-id="@Model.Post.Id">Back</a>
            </form>
        </div>
    </div>



