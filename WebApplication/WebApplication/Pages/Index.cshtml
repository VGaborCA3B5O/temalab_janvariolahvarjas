@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="card-columns">
        @foreach (var post in Model.Posts)
        {
        <div class="card text-white bg-dark">
            <div class="card-body">
                <a class="text-danger" asp-page="./Details" asp-route-id="@post.Id">
                    <h5 class="card-title">@post.Title</h5>
                </a>
                <p class="card-text">By @post.User</p>
                <img class="card-img-top" src="~/Images/Uploads/@post.ImageName" />
            </div>
        </div>
        }
    </div>



